@model sklep.Models.ProductViewModel

<form asp-action="Index" asp-controller="Product">
    <h4>Add Product</h4>
    <hr />
    <input asp-for="@Model.ID" type="hidden" />
    <br />
    <label asp-for="@Model.Name"></label>
    <input asp-for="@Model.Name" class="form-control" />
    <br />
    <label asp-for="@Model.Category"></label>
    <input asp-for="@Model.Category" class="form-control" />
    <br />
    <label asp-for="@Model.Price"></label>
    <input asp-for="@Model.Price" class="form-control" type="number" step="0.01" />
    <br />
    <label asp-for="@Model.StockQuantity"></label>
    <input asp-for="@Model.StockQuantity" class="form-control" type="number" />
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
